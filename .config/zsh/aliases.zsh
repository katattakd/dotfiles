alias ls='ls -Ab --color=auto --si'
alias l='ls -o'

alias du='du -d 1 --si'
alias df='df -T --si'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias lsblk='lsblk -o NAME,SIZE,TYPE,FSTYPE,MOUNTPOINT,LABEL'

alias arp='sudo arp-scan -v -i 5'

alias rm='rm -ir'
alias cp='cp -ir'
alias mv='mv -i'
alias mkdir='mkdir -p'
alias chown='chown -hR'
