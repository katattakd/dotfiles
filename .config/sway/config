default_border none
default_floating_border none
gaps inner 8

set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d6a
set $gray #a89984
set $darkgray #1d2021
set $white #ebdbb2

output * bg $darkgray solid_color

# Title bar
font Noto Sans Mono 10
client.focused          $blue $blue $darkgray $purple $darkgray
client.focused_inactive $darkgray $darkgray $gray $purple $darkgray
client.unfocused        $darkgray $darkgray $gray $purple $darkgray
client.urgent           $red $red $white $red $red

# Status bar configuration
bar {
	font Noto Sans Mono 10
	position top
	status_command i3status
	separator_symbol |
	colors {
		background $bg
		statusline $gray
		focused_workspace $aqua $aqua $darkgray
		inactive_workspace $darkgray $darkgray $gray
		active_workspace $darkgray $darkgray $gray
		urgent_workspace $red $red $bg
	}
	status_padding 4
	status_edge_padding 10
}

# Input method configuration
input type:touchpad {
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled

	# Pinebook Pro specific tweaks
	pointer_accel -.2
	scroll_factor .8
}
input type:keyboard {
	repeat_delay 300
	repeat_rate 30
	xkb_options "caps:shift,shift:both_capslock_cancel,compose:ralt"
}
input type:pointer {
	accel_profile flat
}

# Display configuration
output * adaptive_sync on
